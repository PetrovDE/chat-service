# Llama Chat Service Configuration
# Copy this file to .env and update with your values

# ============================================
# APPLICATION SETTINGS
# ============================================

# Application Mode (development, production)
APP_ENV=production

# Secret key for session encryption (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here-change-this-in-production

# Application host and port
HOST=0.0.0.0
PORT=8000

# Number of worker processes
WORKERS=4

# Request timeout in seconds
REQUEST_TIMEOUT=600

# ============================================
# OLLAMA CONFIGURATION (Local Models)
# ============================================

# Ollama server URL
OLLAMA_HOST=http://localhost:11434

# Default model to use
OLLAMA_MODEL=llama3.1:8b

# Ollama request timeout (seconds)
OLLAMA_TIMEOUT=300

# ============================================
# CORPORATE API CONFIGURATION (Optional)
# ============================================

# Enable corporate API support
ENABLE_CORPORATE_API=false

# API Type (openai, claude, custom)
CORPORATE_API_TYPE=openai

# API Endpoint URL
CORPORATE_API_URL=https://api.openai.com/v1/chat/completions

# API Key (keep secure!)
CORPORATE_API_KEY=

# Model name for API
CORPORATE_MODEL_NAME=gpt-4

# API timeout (seconds)
CORPORATE_API_TIMEOUT=60

# ============================================
# SECURITY SETTINGS
# ============================================

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:8000,https://your-domain.com

# Max request size (MB)
MAX_REQUEST_SIZE=100

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Authentication (optional)
AUTH_ENABLED=false
AUTH_SECRET=
AUTH_ALGORITHM=HS256
AUTH_TOKEN_EXPIRE_MINUTES=1440

# ============================================
# FILE UPLOAD SETTINGS
# ============================================

# Enable file uploads
ENABLE_FILE_UPLOAD=true

# Upload directory
UPLOAD_DIR=/var/lib/llama-chat/uploads

# Maximum file size (MB)
MAX_FILE_SIZE_MB=50

# Allowed file types (comma-separated)
ALLOWED_FILE_TYPES=.txt,.pdf,.csv,.json,.xlsx,.xls

# Temporary file cleanup (hours)
TEMP_FILE_CLEANUP_HOURS=24

# ============================================
# LOGGING CONFIGURATION
# ============================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log directory
LOG_DIR=/var/log/llama-chat

# Log file names
SERVICE_LOG=service.log
ERROR_LOG=error.log
ACCESS_LOG=access.log

# Log rotation
LOG_ROTATE_DAYS=14
LOG_ROTATE_SIZE_MB=100

# ============================================
# DATABASE CONFIGURATION (Future)
# ============================================

# Database type (sqlite, postgresql, mysql)
DATABASE_TYPE=sqlite

# Database connection string
DATABASE_URL=sqlite:///var/lib/llama-chat/chat.db

# Connection pool settings
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# ============================================
# CACHE CONFIGURATION
# ============================================

# Enable caching
CACHE_ENABLED=true

# Cache type (memory, redis)
CACHE_TYPE=memory

# Redis configuration (if CACHE_TYPE=redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Cache TTL (seconds)
CACHE_TTL=3600

# ============================================
# MONITORING AND METRICS
# ============================================

# Enable metrics collection
METRICS_ENABLED=true

# Metrics endpoint
METRICS_ENDPOINT=/metrics

# Prometheus pushgateway (optional)
PROMETHEUS_PUSHGATEWAY_URL=

# Health check interval (seconds)
HEALTH_CHECK_INTERVAL=30

# ============================================
# MODEL SETTINGS
# ============================================

# Default temperature for responses
DEFAULT_TEMPERATURE=0.7

# Default max tokens
DEFAULT_MAX_TOKENS=1000

# Top P sampling
DEFAULT_TOP_P=0.9

# Top K sampling
DEFAULT_TOP_K=40

# Streaming enabled by default
DEFAULT_STREAMING=true

# Context window size
CONTEXT_WINDOW_SIZE=4096

# ============================================
# PERFORMANCE TUNING
# ============================================

# Thread pool size
THREAD_POOL_SIZE=10

# Async IO threads
ASYNC_IO_THREADS=4

# Connection pool size
CONNECTION_POOL_SIZE=20

# Request queue size
REQUEST_QUEUE_SIZE=100

# ============================================
# FEATURE FLAGS
# ============================================

# Enable chat history
ENABLE_CHAT_HISTORY=true

# Enable file analysis
ENABLE_FILE_ANALYSIS=true

# Enable model switching
ENABLE_MODEL_SWITCHING=true

# Enable streaming responses
ENABLE_STREAMING=true

# Enable API documentation
ENABLE_API_DOCS=true

# ============================================
# EXTERNAL INTEGRATIONS (Optional)
# ============================================

# Slack integration
SLACK_ENABLED=false
SLACK_WEBHOOK_URL=

# Email notifications
EMAIL_ENABLED=false
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@your-domain.com
EMAIL_TO=admin@your-domain.com

# ============================================
# DEVELOPMENT SETTINGS
# ============================================

# Debug mode (never enable in production!)
DEBUG=false

# Auto-reload on code changes
AUTO_RELOAD=false

# Development server
DEV_SERVER_HOST=127.0.0.1
DEV_SERVER_PORT=8000

# ============================================
# DEPLOYMENT SETTINGS
# ============================================

# Deployment environment
DEPLOYMENT_ENV=production

# Service name for systemd
SERVICE_NAME=llama-chat

# Process user
PROCESS_USER=llama-chat

# Process group
PROCESS_GROUP=llama-chat

# ============================================
# BACKUP SETTINGS
# ============================================

# Enable automatic backups
BACKUP_ENABLED=true

# Backup directory
BACKUP_DIR=/var/backups/llama-chat

# Backup retention (days)
BACKUP_RETENTION_DAYS=30

# Backup schedule (cron format)
BACKUP_SCHEDULE="0 2 * * *"

# ============================================
# MAINTENANCE MODE
# ============================================

# Enable maintenance mode
MAINTENANCE_MODE=false

# Maintenance message
MAINTENANCE_MESSAGE="The service is currently under maintenance. Please try again later."

# ============================================
# CUSTOM SETTINGS
# ============================================

# Add your custom settings below
# CUSTOM_SETTING_1=value1
# CUSTOM_SETTING_2=value2