# ============================================
# DATABASE SETTINGS
# ============================================

# PostgreSQL connection string
# Format: postgresql+asyncpg://username:password@host:port/database
DATABASE_URL=postgresql+asyncpg://llama_chat_user:your_secure_password_here@localhost:5432/llama_chat_db

# For Alembic migrations (sync version)
ALEMBIC_DATABASE_URL=postgresql://llama_chat_user:your_secure_password_here@localhost:5432/llama_chat_db


# ============================================
# OLLAMA SETTINGS
# ============================================

# Ollama API host
OLLAMA_HOST=http://localhost:11434

# Default Ollama model
OLLAMA_MODEL=llama3.1:8b


# ============================================
# OPENAI SETTINGS (Optional)
# ============================================

# OpenAI API key (leave empty if not using)
OPENAI_API_KEY=

# Default OpenAI model
OPENAI_MODEL=gpt-4


# ============================================
# SECURITY SETTINGS
# ============================================

# JWT Secret Key (ВАЖНО: сгенерируйте новый ключ!)
# Команда для генерации: openssl rand -hex 32
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production-use-openssl-rand-hex-32

# JWT Algorithm
JWT_ALGORITHM=HS256

# JWT Token expiration time in minutes (10080 = 7 days)
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Password minimum length
PASSWORD_MIN_LENGTH=8


# ============================================
# CORS SETTINGS
# ============================================

# Allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000


# ============================================
# MODEL SETTINGS
# ============================================

# Default model source: ollama or openai
DEFAULT_MODEL_SOURCE=ollama


# ============================================
# APPLICATION SETTINGS
# ============================================

# Server host and port
SERVER_HOST=127.0.0.1
SERVER_PORT=8000

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO