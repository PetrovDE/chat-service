# ============================================
# DATABASE SETTINGS
# ============================================

# PostgreSQL connection string
# Format: postgresql+asyncpg://username:password@host:port/database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/llama_chat_db

# For Alembic migrations (sync version)
ALEMBIC_DATABASE_URL=postgresql://user:password@localhost:5432/llama_chat_db

# ============================================
# SECURITY SETTINGS
# ============================================

# JWT Secret Key (ВАЖНО: сгенерируйте новый ключ!)
# Команда для генерации: openssl rand -hex 32
JWT_SECRET_KEY=secret_key

# JWT Algorithm
JWT_ALGORITHM=HS256

# JWT Token expiration time in minutes (10080 = 7 days)
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Password minimum length
PASSWORD_MIN_LENGTH=8

# ============================================
# CORS SETTINGS
# ============================================

# Allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# COMMON CORE
APP_ENV=production
APP_SECRET_KEY=your_secret
HOST=0.0.0.0
PORT=8080

# FILE/VECTOR STORE CONFIGS
COLLECTION_NAME=rag_main_collection
MAX_FILESIZE_MB=50
SUPPORTED_FILETYPES=pdf,docx,txt,md
VECTORDB_PATH=/opt/aihub/vectorstore

# DEFAULT EMBEDDINGS SETTINGS
EMBEDDINGS_MODEL=llama3.1:8b
EMBEDDINGS_BASEURL=http://localhost:11434

# OPENAI SETTINGS (опционально)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4

# DEFAULT MODEL SOURCE
DEFAULT_MODEL_SOURCE=ollama

# RAG/LLM MODES DEFAULTS
DEFAULT_LLM_MODE=local
DEFAULT_RAG_MODEL=llama3.1:8b

# CHUNKS/SPLITTERS
CHUNK_SIZE=1000
MAX_CHUNKS_PER_FILE=100
SPLITTER_TYPE=smart
CHUNK_OVERLAP=200

# ENABLE CACHE
ENABLE_CACHE=True

# CORPORATE AI HUB SETTINGS
CORPORATE_API_URL=https://corporate-hub.ai/api
CORPORATE_API_USERNAME=system_user
CORPORATE_API_TOKEN=your_corporate_api_jwt_token

# LOGGING/DEBUG
LOG_LEVEL=INFO

# ОПЦИОНАЛЬНО — если есть SMTP/alerts/metrics
# SMTP_SERVER=smtp.yourmail.com
# METRICS_ENABLED=True

# (Для KeyCloak refresh можно добавить имя и refresh token)
# CORPORATE_KEYCLOAK_REFRESH_TOKEN=xxxx
# CORPORATE_KEYCLOAK_CLIENT_ID=ai-hub-client

# === END OF FILE ===
